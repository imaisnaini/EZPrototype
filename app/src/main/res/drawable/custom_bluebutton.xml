<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/primary_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_dark" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_light"
                android:endColor="@color/primary"
                android:angle="180"/>
            <corners
                android:radius="4dp" />
            <padding
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
</selector>